<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:id="@+id/mf_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/backdropImg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true" />

        <LinearLayout
            android:id="@+id/head_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/backdropImg"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/overview_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/head_lv"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

        </LinearLayout>

        <ProgressBar
            android:id="@+id/load_pb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/overview_lv"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/networkErrorTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/overview_lv"
            android:layout_marginBottom="6dp"
            android:text="@string/retry_tv"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/textSize"
            android:visibility="gone" />

        <Button
            android:id="@+id/retryB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/networkErrorTV"
            android:layout_centerHorizontal="true"
            android:background="@color/primaryColor"
            android:padding="8dp"
            android:text="@string/retry"
            android:textColor="@color/textColor"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/llcont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/overview_lv"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_revs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/llcont"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

        </LinearLayout>

    </RelativeLayout>
</ScrollView>